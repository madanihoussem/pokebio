{% extends 'base.html.twig' %}

{% block title %}Panier -PokéBio{% endblock %}

{% block body %}
    <style>
        button{
            background: #ffb03b;
            border: 0;
            padding: 10px 24px;
            color: #fff;
            transition: 0.4s;
            border-radius: 50px;
        }
        button:hover {
            background: #ffa012;
        }
    </style>
    <!-- ======= Top Bar ======= -->
    <section id="topbar" class="d-flex align-items-center fixed-top ">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-center justify-content-lg-start">
            <i class="bi bi-phone d-flex align-items-center"><span>+33 1 73 43 30 00</span></i>
            <i class="bi bi-clock ms-4 d-none d-lg-flex align-items-center"><span>Lun-Sam: 11:00 - 23:00</span></i>
        </div>
    </section>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center mb-5">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

            <div class="logo me-auto">
                <h1><a href="index.html">PokéBio</a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link scrollto " href="{{path('home')}}#hero">Accueil</a></li>
                    <li><a class="nav-link scrollto" href="{{path('home')}}#about">À Propos</a></li>
                    <li><a class="nav-link scrollto" href="{{path('home')}}#menu">Menu</a></li>
                    <li><a class="nav-link scrollto" href="{{path('blog_liste')}}">Blog</a></li>
                    <li><a class="nav-link scrollto" href="{{path('home')}}#chefs">Chefs</a></li>
                    <li><a class="nav-link scrollto" href="{{path('home')}}#gallery">Gallery</a></li>
                    <li><a class="nav-link scrollto" href="{{path('home')}}#contact">Contact</a></li>
                    <li>
                        <a class="nav-link scrollto position-relative" href="{{path('cart_index')}}">Panier</a>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            {% if app.session.get('qte') is defined %}
                                {{app.session.get('qte')}}
                            {% else %}
                                0
                            {% endif %}
                            <span class="visually-hidden">unread messages</span>
                        </span>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

            <a href="{{path('app_login')}}" class="book-a-table-btn scrollto">Connexion</a>

        </div>
    </header><!-- End Header -->
    <main id="main" class="mt-5 mb-5">
        <section class="specials mt-5">
            <div class="container mt-5">
                <section class="bg-light p-3">
                    <h1>Votre panier</h1>
                    <p>Adresse de livraison : {{commande[0].livraison.Adresse}}</p>
                </section>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix</th>
                            <th>Quantité</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for element in dataPanier %}
                        <tr>
                            <td>{{ element.produit.nom }}</td>
                            <td class="text-end">{{ element.produit.prix }} €</td>
                            <td>{{ element.quantite }}</td>
                            <td class="text-end">{{ element.quantite * element.produit.prix }} €</td>
                            {# <td>
                                <a href="{{path("cart_add", {id: element.produit.id})}}" class="btn btn-success">
                                    <i class="bi bi-cart-plus"></i>
                                </a>
                                <a href="{{path("cart_remove", {id: element.produit.id})}}" class="btn btn-warning">
                                    <i class="bi bi-cart-dash"></i>
                                </a>
                                <a href="{{path("cart_delete", {id: element.produit.id})}}" class="btn btn-danger">
                                    <i class="bi bi-cart-x"></i>
                                </a>
                            </td> #}
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="4" class="text-center">Votre panier est vide</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3">Quantité</td>
                            <td class="text-end">{{ qte }} Produit(s)</td>
                            
                        </tr>
                        <tr>
                            <td colspan="3">Total</td>
                            <td class="text-end">{{ total }} €</td>
                        </tr>
                    </tfoot>
                </table>
                {# <div class="d-flex justify-content-between">
                    <a href="{{path('home')}}#menu" class="book-a-table-btn scrollto">Continuez vous achats</a>
                    <a href="{{path('commandes')}}" class="book-a-table-btn scrollto">Commander</a>
                </div> #}
            </div>
        </section>
    </main>
    <!-- ======= Footer ======= -->
    <footer id="footer" class="mt-5">
        <div class="container">
            <h3>Poké Bio</h3>
            <p>Et aut eum quis fuga eos sunt ipsa nihil. Labore corporis magni eligendi fuga maxime saepe commodi placeat.
            </p>
            <div class="social-links">
                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
            <div class="copyright">
                &copy; Copyright <strong><span>Poké Bio</span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
                <!-- You can delete the links only if you purchased the pro version. -->
                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/delicious-free-restaurant-bootstrap-theme/ -->
                Designed by <a href="#">DigiComLab</a>
            </div>
        </div>
    </footer><!-- End Footer -->

{% endblock %}